<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @RenderSection("styles", false);
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styles")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="page">
        <nav class="colorlib-nav" role="navigation">
            <div class="top-menu">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-7 col-md-9">
                            <div id="colorlib-logo">@Html.ActionLink("Mi Tienda Leguizamon", "Index", "Home")</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-left menu-1">
                            <ul>
                                <li class="active">@Html.ActionLink("Inicio", "Index", "Home")</li>
                                <li class="has-dropdown">
                                    <a href="#">Catalogo</a>
                                    <ul class="dropdown">
                                        <li><a href="product-detail.html">Hombres</a></li>
                                        <li><a href="cart.html">Mujeres</a></li>
                                        <li><a href="checkout.html">Niños</a></li>
                                        <li><a href="order-complete.html">Carteras</a></li>
                                    </ul>
                                </li>
                                <li>@Html.ActionLink("Secciones", "Index", "Secciones")</li>
                                <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                                <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>

                            </ul>
                            <div>
                                @Html.Partial("_LoginPartial")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sale">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 offset-sm-2 text-center">
                            <div class="row">
                                <div class="owl-carousel2">
                                    <div class="item">
                                        <div class="col">
                                            <h3><a href="#">25% off (Almost) Everything! Use Code: Summer Sale</a></h3>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <div class="col">
                                            <h3><a href="#">Our biggest sale yet 50% off all summer shoes</a></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/script")
    @RenderSection("scripts", required: false)
</body>
</html>
